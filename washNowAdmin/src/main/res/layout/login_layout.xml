<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wash_splash_bg" >

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/graystrokebg"
        android:ems="10"
        android:hint="Password"
        android:minWidth="150dp"
        android:padding="5dp"
        android:inputType="textPassword"
            
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/graystrokebg"
        android:ems="10"
        android:hint="Username"
        android:minWidth="150dp"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone" >
    </EditText>

    <Button
        android:id="@+id/btGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/transbtn"
        android:padding="10dp"
        android:text="ENTER"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splash_logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:gravity="center_horizontal"
        android:layout_toEndOf="@+id/etEmail"
        android:layout_toRightOf="@+id/etEmail"
        android:textStyle="bold"
        android:id="@+id/tvVersion"
        android:visibility="gone"
        android:textColor="@color/home_violet"
         android:textSize="22sp" />

</RelativeLayout>